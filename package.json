    "vite": "^5.4.6"
  },
  "author": "BABYFIXIE",
  "license": "ISC",
  "dependencies": {
    "datatables.net-dt": "^2.2.2",
    "vite-plugin-full-reload": "^1.2.0",
    "vite-plugin-html-inject": "^1.1.2"
  },
  "main": "src/main.js",
  "build": {
    "appId": "com.myapp.app",
    "productName": "The Hive Tool",
